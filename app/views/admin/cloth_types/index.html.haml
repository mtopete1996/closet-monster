%h1.my-4.text-center Types of Cloth Section

.d-flex.justify-content-end.mb-4
  = link_to [:new, module_name, :cloth_type], class: 'btn btn-success' do
    = fa_icon(:plus, text: 'New type')

= render 'shared/flash_messages' if flash.present?

- if @cloth_types.present?
  = render 'shared/page_buttons', total_pages: @total_pages, route: [module_name, :cloth_types],
                                  parameters: @parameters
  = render 'admin/cloth_types/table', cloth_types: @cloth_types
  = render 'shared/page_buttons', total_pages: @total_pages, route: [module_name, :cloth_types],
                                  parameters: @parameters
- else
  .alert.alert-info Looks like you haven't created any type of cloth
